<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:adjustViewBounds="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ls"
            tools:context=".EmployeeModule">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tool1">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Employee List"
                      android:textStyle="bold"
                      android:textSize="15sp"
                      android:gravity="center"
                      android:layout_marginRight="?android:attr/actionBarSize"
                      android:textColor="#BD84A4"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="509dp"
                      android:id="@+id/leads11"
                      android:orientation="vertical"
                      android:padding="5dp"
                      android:layout_marginTop="167dp" android:layout_alignParentTop="true">
            <EditText android:id="@+id/field1"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="First Name:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/field2"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Last Name:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/field3"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Gender:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/field4"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Department:"
                      android:inputType="textEmailAddress" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/field5"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:drawableEnd="@drawable/ic_date_range_black_24dp"
                      android:drawableRight="@drawable/ic_date_range_black_24dp"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Date of birth:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/field6"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Phone Number:"
                      android:inputType="phone" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/field7"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Email ID:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/field8"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Employee ID:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>


        </LinearLayout>
        <TextView
                android:text="Details"
                android:layout_width="81dp"
                android:layout_height="56dp" android:id="@+id/textView4" android:layout_marginTop="97dp"
                android:textSize="24sp"
                android:textColor="#7A8FB7"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
        />
        <Button
                android:text="Add Employee"
                android:textColor="#FFFF"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="183dp"
                android:layout_height="wrap_content" android:id="@+id/button6" android:layout_marginTop="735dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="82dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bt_bg"
                android:layout_marginStart="82dp" android:layout_alignParentLeft="true"/>

    </RelativeLayout>
</ScrollView>