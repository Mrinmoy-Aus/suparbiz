<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:adjustViewBounds="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ls"
            tools:context=".AttendanceModule">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tool1">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Special Tasks"
                  android:textStyle="bold"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:layout_marginRight="?android:attr/actionBarSize"
                  android:textColor="#BD84A4"/>
        </androidx.appcompat.widget.Toolbar>

        <TextView android:id="@+id/date12"
                  android:layout_width="230dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/aa_bg"
                  android:alpha="0.7"
                  android:drawablePadding="20dp"
                  android:textColorHint="#fff"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:selectAllOnFocus="true" android:singleLine="true"
                  android:layout_marginTop="117dp" android:layout_alignParentTop="true" android:hint="Date:"
                  android:layout_alignParentStart="true" android:layout_marginLeft="6dp"
                  android:layout_marginStart="6dp" android:layout_alignParentLeft="true"/>
        <CheckBox android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Update Cover Photo"
                  android:textColor="#BD84A4"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="203dp" android:layout_alignParentTop="true"/>
        <CheckBox android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:text="Jamashthami Creative"
                  android:textColor="#BD84A4"
                  android:layout_marginTop="251dp"
                  android:layout_alignParentTop="true"/>
        <CheckBox android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Lorem Ipsum"
                  android:textColor="#BD84A4"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="298dp"
                  android:layout_alignParentTop="true"/>
        <CheckBox android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Lorem Ipsum"
                  android:textColor="#BD84A4"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="345dp"
                  android:layout_alignParentTop="true"/>
        <Button android:id="@+id/task_btn"
                android:layout_marginTop="429dp"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:background="@drawable/aa_bg"
                android:alpha="0.8"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:text="Add Tasks"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="125dp" android:layout_marginStart="125dp"
                android:layout_alignParentLeft="true"/>


    </RelativeLayout>
</ScrollView>