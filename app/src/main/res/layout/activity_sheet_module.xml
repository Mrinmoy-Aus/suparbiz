                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tool1">
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Consolidated Attendance"
                      android:textStyle="bold"
                      android:textSize="15sp"
                      android:gravity="center"
                      android:layout_marginRight="?android:attr/actionBarSize"
                      android:textColor="#BD84A4"/>

        </androidx.appcompat.widget.Toolbar>

        <TextView android:id="@+id/date"
                  android:layout_width="230dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/aa_bg"
                  android:alpha="0.7"
                  android:drawablePadding="20dp"
                  android:textColorHint="#fff"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:selectAllOnFocus="true" android:singleLine="true"
                  android:layout_marginTop="117dp" android:layout_alignParentTop="true" android:hint="Date:"
