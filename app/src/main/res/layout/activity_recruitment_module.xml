<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:adjustViewBounds="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ls"
            tools:context=".CustomerModule">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tool1">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Recruitment"
                  android:textStyle="bold"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:layout_marginRight="?android:attr/actionBarSize"
                  android:textColor="#BD84A4"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="388dp"
                      android:id="@+id/customer11"
                      android:orientation="vertical"
                      android:padding="5dp"
                      android:layout_marginTop="167dp" android:layout_alignParentTop="true">
            <EditText android:id="@+id/position1"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Profile Name:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/position2"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Department:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/position3"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Salary offered:"
                      android:inputType="number" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/position4"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"
                      android:hint="Qualification:"/>
            <EditText android:id="@+id/position5"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Experience Required:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/position6"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Number of openings:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>

        </LinearLayout>
        <Button
                android:text="Create"
                android:textColor="#FFFF"
                android:layout_width="183dp"
                android:layout_height="wrap_content" android:id="@+id/button6" android:layout_marginTop="662dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="85dp"
                android:background="@drawable/bt_bg"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginStart="85dp" android:layout_alignParentLeft="true"/>

    </RelativeLayout>
</ScrollView>