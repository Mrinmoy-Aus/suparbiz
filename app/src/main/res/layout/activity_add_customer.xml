<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ls"
        tools:context=".AddCustomer">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tool1"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Customers"
                  android:textStyle="bold"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:layout_marginRight="?android:attr/actionBarSize"
                  android:textColor="#BD84A4"/>
    </androidx.appcompat.widget.Toolbar>
    <Button
            android:layout_width="100dp"
            android:layout_height="100dp" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/customer_button"
            android:background="@drawable/add"
            android:layout_marginTop="134dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar1" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"/>
    <TextView
            android:text="Add Customer"
            android:layout_width="116dp"
            android:layout_height="35dp" android:id="@+id/textView"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:textColor="#7A8FB7"
            android:layout_alignParentLeft="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/customer_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>