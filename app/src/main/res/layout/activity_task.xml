<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ls"
        tools:context=".TaskActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tool1" app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Task Manager"
                  android:textStyle="bold"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:layout_marginRight="?android:attr/actionBarSize"
                  android:textColor="#BD84A4"/>
    </androidx.appcompat.widget.Toolbar>
    <Button
            android:text="Routine Task"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_width="120dp"
            android:layout_height="120dp" android:id="@+id/routine"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/a"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar1" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"/>
    <Button
            android:text="Special Task"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_width="120dp"
            android:layout_height="120dp" android:id="@+id/specail"
            android:layout_alignParentTop="true"
            android:background="@drawable/b" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar1" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>