<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:adjustViewBounds="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ls"
            tools:context=".CustomerModule">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tool1">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Customers"
                  android:textStyle="bold"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:layout_marginRight="?android:attr/actionBarSize"
                  android:textColor="#BD84A4"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="440dp"
                      android:id="@+id/customer11"
                      android:orientation="vertical"
                      android:padding="5dp"
                      android:layout_marginTop="167dp" android:layout_alignParentTop="true">
            <EditText android:id="@+id/consumer1"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Name:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/consumer2"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Contact Person:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/consumer3"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Phone Number:"
                      android:inputType="phone" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/consumer4"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Email ID:"
                      android:inputType="textEmailAddress" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/consumer5"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Website:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/consumer6"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Source:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>
            <EditText android:id="@+id/consumer7"
                      android:layout_width="match_parent"
                      android:layout_height="45dp"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/b_bg"
                      android:alpha="0.9"
                      android:drawablePadding="20dp"
                      android:textColorHint="#FFFF"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:hint="Order:"
                      android:inputType="text" android:singleLine="true" android:selectAllOnFocus="true"/>


        </LinearLayout>
        <TextView
                android:text="Details"
                android:layout_width="81dp"
                android:layout_height="56dp" android:id="@+id/textView4" android:layout_marginTop="88dp"
                android:textSize="24sp"
                android:textColor="#7A8FB7"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
        />
        <Button
                android:text="Add Customer"
                android:textColor="#FFFF"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_width="183dp"
                android:layout_height="wrap_content" android:id="@+id/button6" android:layout_marginTop="698dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="91dp"
                android:background="@drawable/bt_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="91dp" android:layout_alignParentLeft="true"/>

    </RelativeLayout>
</ScrollView>