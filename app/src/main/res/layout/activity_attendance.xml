<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ls"
        tools:context=".AttendanceActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tool1"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Attendance Details"
                  android:textStyle="bold"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:layout_marginRight="?android:attr/actionBarSize"
                  android:textColor="#BD84A4"/>

    </androidx.appcompat.widget.Toolbar>
    <Button
            android:text="Attendance"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/attendance" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:background="@drawable/a"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="28dp" android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar1"
            android:scaleType="fitCenter"
            android:src="@drawable/a" tools:src="@drawable/a"/>
    <Button
            android:text="Company Sheet"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/sheet" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:background="@drawable/b"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar1"
            android:scaleType="fitCenter"
            android:src="@drawable/b" tools:src="@drawable/b" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

