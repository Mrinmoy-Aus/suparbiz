<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ls"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main2"
        tools:context=".Main2Activity">

    <Button
            android:text="Employee List"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/button1"
            android:textAllCaps="false"
            android:background="@drawable/d"
            android:textColor="#fff"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
    />
    <Button
            android:text="Attendance Sheet"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/button2"
            android:layout_alignParentTop="true"
            android:textAllCaps="false"
            android:background="@drawable/e"
            android:textColor="#fff"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"/>
    <Button
            android:text="Task Manager"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/button3"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" android:background="@drawable/b"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/button1"/>
    <Button
            android:text="CRM"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/button4"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_alignParentTop="true" android:background="@drawable/a"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="Recruitment"
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/button5"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_alignParentLeft="true" android:background="@drawable/c"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/button3"/>

</androidx.constraintlayout.widget.ConstraintLayout>
