<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" tools:context=".ActivityLogin">
    <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/homepage"
            android:scaleType="centerCrop"/>

    <ImageView android:id="@+id/login_logo"
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:src="@drawable/logo"
               android:contentDescription="@string/app_name"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toTopOf="@+id/username111"
               app:layout_constraintVertical_bias="1.0"
               app:layout_constraintStart_toStartOf="@+id/username111"
               app:layout_constraintEnd_toEndOf="@+id/username111" app:layout_constraintHorizontal_bias="0.313"/>


    <EditText android:id="@+id/username111"
              android:layout_width="301dp"
              android:layout_height="wrap_content"
              android:background="@drawable/btn_bg"
              android:drawableStart="@drawable/ic_person_black_24dp"
              android:drawableLeft="@drawable/ic_person_black_24dp"
              android:drawablePadding="20dp"
              android:textColorHint="#000"
              android:inputType="text"
              android:textSize="15sp"
              android:textStyle="bold"
              android:hint="Email"
              android:alpha="0.5"
              android:selectAllOnFocus="true" android:singleLine="true"
              android:layout_centerHorizontal="true"
              android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp"
              android:layout_marginTop="336dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText android:id="@+id/password111"
              android:layout_width="301dp"
              android:layout_height="wrap_content"
              android:background="@drawable/btn_bg"
              android:alpha="0.5"
              android:drawableStart="@drawable/ic_lock_black_24dp"
              android:drawableLeft="@drawable/ic_lock_black_24dp"
              android:drawablePadding="20dp"
              android:textColorHint="#000"
              android:hint="Password"
              android:textSize="15sp"
              android:textStyle="bold"
              android:inputType="textPassword" android:singleLine="true" android:selectAllOnFocus="true"
              android:layout_centerHorizontal="true"
              android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp" app:layout_constraintBottom_toTopOf="@+id/login_btn"
              android:layout_marginBottom="24dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/username111"
              app:layout_constraintVertical_bias="1.0"/>
    <Button android:id="@+id/login_btn"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:alpha="0.5"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="Login"

            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="104dp" app:layout_constraintTop_toBottomOf="@+id/username111"/>
    <TextView android:id="@+id/reset_pass_txt"
              android:layout_width="138dp"
              android:layout_height="30dp"
              android:textColor="#FFFF"
              android:text="Forgot Password?"
              android:drawablePadding="20dp"
              android:textStyle="bold"
              android:textSize="15sp"
              android:layout_gravity="left"
              android:layout_alignParentTop="true"
              android:layout_alignParentStart="true"
              android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              app:layout_constraintTop_toTopOf="@+id/login_btn"
              android:layout_marginTop="96dp"
              app:layout_constraintStart_toStartOf="@+id/login_btn" app:layout_constraintEnd_toEndOf="@+id/login_btn"
              app:layout_constraintHorizontal_bias="1.0"/>
    <TextView android:id="@+id/signup"
              android:layout_width="63dp"
              android:layout_height="35dp"
              android:textColor="#FFFF"
              android:text="Sign Up"
              android:drawablePadding="20dp"
              android:textSize="15sp"
              android:textStyle="bold"
              android:layout_gravity="center"
              android:layout_centerHorizontal="true"
              android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp"
              android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="@+id/login_btn"
    />

</androidx.constraintlayout.widget.ConstraintLayout>



